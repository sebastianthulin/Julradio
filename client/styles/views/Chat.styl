#Chat
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  .chatWelcome
    text-align center
    width 100%
    padding-top 40px
    h1
      font-family lobster

    p
      color rgba(255,255,255,0.7)

  .ConversationList
    width 60px
    height 100%
    overflow-y auto
    border-right 1px solid rgba(255, 255, 255, 0.17)
    +tablet()
      width 25%
      .Conversation .username
        display inline-block

  .Messages
    position fixed
    +desktop()
      position absolute
    right 0px
    top 0px
    width calc(100% - 60px)
    height 100%
    +tablet()
      width 75%

  .user
    position absolute
    displayFlex()
    align-items center
    top 0
    width 100%
    height 40px
    border-bottom 1px solid rgba(255, 255, 255, 0.17)
    a
      color #FFF
      font-size 18px
      margin 0px auto
      text-decoration none

  .messageContainer
    position absolute
    top 40px
    width 100%
    height calc(100% - 80px)
    padding 10px 20px 0
    overflow-y scroll
    
  input
    position absolute
    bottom 0
    width 100%
    height 40px
    padding 0 10px
    
  .initial
    padding 20px

  .Message
    clear both
    margin-bottom 8px
    padding 6px 10px
    font-size 14px
    word-break break-all
    border-radius 4px
    &.left
      background #D8D8D8
      color #000
      float left
      margin-right 40px
    &.right
      background #0D840D
      float right
      margin-left 40px

  .Conversation
    displayFlex()
    overflow hidden
    width 100%
    height 60px
    //line-height 50px
    font-size 16px
    border-bottom 1px solid rgba(255, 255, 255, 0.17)
    padding 10px
    padding-right 0
    &.isUnseen
      background rgba(0, 0, 0, 0.17)
      border-color transparent
    &.isSelected
      background rgba(255, 255, 255, 0.17)
      border-color transparent
    &:last-child
      border none

    .ProfilePicture
      float left
      height 40px
      width 40px
      margin-right 10px

    .username
      color #FFF
      display none
      float left
      &.handle
        line-height 40px
      .handle
        opacity .7
        font-size 13px
        display block
