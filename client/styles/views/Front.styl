#front
  width 100%
  .schedule
    margin-bottom 60px
    header
      font-size 33px
      margin 0px 0px 20px -10px
      padding 6px 10px
      background rgba(0, 0, 0, 0.15)

    h1, h2, h3, h4, h5, h6
      margin 0px

    h5
      font-size 14px
      color rgba(255,255,255,0.7)
      margin 0px
      padding 0px
      
    p
      margin 10px 0px 0px 0px

  .article
    margin-bottom 60px
    .header
      margin-bottom 30px
      padding-bottom 20px
      line-height 25px
      border-bottom 1px solid rgba(255, 255, 255, 0.4)
      img
        float left
        width 50px
        height 50px
        margin-right 10px
      .user
        color #FFF
        text-decoration none
        &:hover
          border-bottom 1px solid
      .timestamp
        color rgba(255, 255, 255, 0.53)

  .hashtagJulradio
    font-size 20px
    margin-bottom 10px
    display block

  .compose
    position relative
    margin-bottom 10px
    padding 10px
    color #000
    background #FFF
    border-radius 3px
    noUserSelect()

  .tweets
    max-height 1000px
    overflow-y scroll
    border-radius 3px
    
  .informer
    font-size 13px
    font-style italic
    color rgba(255, 255, 255, 0.67)