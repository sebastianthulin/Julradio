#front
  width 100%
    
.article
  border-top 1px solid rgba(255, 255, 255, 0.25)
  padding-top 14px
  .header
    position relative
    height 50px
    margin-bottom 20px
    line-height 1
    img
      width 50px
      height 50px
      border-radius 50%
    .user, .timestamp
      position absolute
      left 60px
    .user
      top 5px
    .timestamp
      bottom 5px
      color rgba(255, 255, 255, 0.53)
  p
    color rgba(255, 255, 255, 0.76)