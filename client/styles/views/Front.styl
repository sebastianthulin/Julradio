#front
  width 100%
  .article
    border-top 1px solid rgba(255, 255, 255, 0.25)
    padding-top 20px
    .header
      position relative
      height 50px
      margin-bottom 20px
      line-height 1
      img
        width 50px
        height 50px
        border-radius 50%
      .user, .timestamp
        position absolute
        left 60px
      .user
        top 5px
      .timestamp
        bottom 5px
        color rgba(255, 255, 255, 0.53)
    p
      color rgba(255, 255, 255, 0.76)

  .hashtagJulradio
    font-size 20px
    margin-bottom 10px
    display block

  .compose
    position relative
    padding 10px
    background #FFF
    margin 20px 10px
    border-radius 5px
    color #000
    noUserSelect()
    &:after
      position absolute
      content ''
      background rgba(255, 0, 0, 0.3)
      top -10px
      left -10px
      bottom -10px
      right -10px
      border-radius 5px
      z-index -1

  .tweets
    max-height 1000px
    overflow-y scroll
    border-radius 3px