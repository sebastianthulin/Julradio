#front
  .schedule
    margin-bottom 20px
    text-align center
    background rgba(178, 18, 18, 0.26)
    padding 25px 0px 30px 0px
    border-radius 5px
    header
      font-size 33px
      margin -10px 0px 10px 0px
      padding 6px 10px
      font-weight 900
      font-style italic

    h1, h2, h3, h4, h5, h6
      margin 0px

    h5
      font-size 14px
      color rgba(255,255,255,0.7)
      margin 0px
      padding 0px
      
    p
      margin 10px 0px 0px 0px

  .article
    margin-bottom 30px
    padding-bottom 30px
    border-bottom 2px solid #FFF
    .header
      height 70px
      line-height 38px
      img
        float left
        width 50px
        height 50px
        margin-right 10px
      .user
        color #FFF
        text-decoration none
        &:hover
          border-bottom 1px solid
      .timestamp
        color rgba(255,255,255,0.53)
        font-size 11px
        margin-top -9px
        display block
        line-height 10px

  .hashtagJulradio
    font-size 20px
    margin-bottom 10px
    display block

  .compose
    position relative
    margin-bottom 10px
    padding 10px
    color #000
    background #FFF
    border-radius 3px
    noUserSelect()

  .tweets
    max-height 1000px
    overflow-y scroll
    border-radius 3px
    
  .informer
    font-size 13px
    font-style italic
    color rgba(255, 255, 255, 0.67)
    width 100%
    text-align center
    margin -5px 0px 10px 0px
    display block