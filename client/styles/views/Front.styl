#front
  width 100%
  .article
    border-top 1px solid rgba(255, 255, 255, 0.25)
    padding-top 20px
    .header
      position relative
      height 50px
      margin-bottom 20px
      line-height 1
      img
        width 50px
        height 50px
        border-radius 50%
      .user, .timestamp
        position absolute
        left 60px
      .user
        top 5px
      .timestamp
        bottom 5px
        color rgba(255, 255, 255, 0.53)
    p
      color rgba(255, 255, 255, 0.76)

  .hashtagJulradio
    font-size 20px
    margin-bottom 10px
    display block

  .newTweet
    padding 10px
    background rgba(255,0,0,0.3)
    margin-bottom 10px
    border-radius 5px
    input
      color #000
      width 100%
      margin 0px
      border 0px
      &:focus
        border 0px

  .tweets
    max-height 1000px
    overflow-y scroll
    border-radius 3px