#Admin
  th, td
    width 150px
    text-align left

  .articleHeaderBox
    padding 15px 0px 13px 0px
    margin-top -1px
    border-bottom 1px solid rgba(255,255,255,0.1)
    border-top 1px solid rgba(255,255,255,0.1)
    display block
    width 100%
    font-size 18px
    font-weight 200
    line-height 18px
    
    .articleHeader
      color white
      font-weight 300
      border-right 1px solid rgba(255,255,255,0.2)
      padding 0px 10px 0px 0px
      
    .articleAuthor
      font-size 14px
      margin-left 10px
      border-right 1px solid rgba(255,255,255,0.2)
      padding 0px 10px 0px 0px
      color rgba(255,255,255,0.5)

    .articleTime
      font-size 13px
      margin-left 10px
      color rgba(255,255,255,0.5)

  .navigation
    display table
    width 100%
    margin-top -20px
    margin-bottom 20px
    border-bottom 1px solid rgba(255,255,255,0.2)
    a
      float left
      width calc(100% / 6)
      padding 20px 0
      text-align center
      color rgba(255, 255, 255, 0.5)
      transition color .2s
      &.active
        color #FFF
      &:hover
        color #FFF
        transition none

#ManageArticle
  textarea
    width 100%
    min-height 300px

#ManageReservations
  .day
    margin-bottom 40px
  .date
    margin-bottom 10px
    padding-bottom 6px
    font-size 20px
    border-bottom 1px solid rgba(255, 255, 255, 0.13)

  .reservationList
    padding 20px
    background rgba(0, 0, 0, 0.07)
    text-align center
    border-radius 5px
    :last-child
      margin-bottom 0
    
.ReservationItem
  margin-bottom 10px
  padding 10px
  border-radius 4px
  cursor pointer
  .time-container
    display flex
    width 138px
    margin 0 auto 6px auto
    align-items center
    justify-content space-between
    span
      font-size 25px
    .time
      padding 10px
      font-size 17px
      border-radius 4px
      background rgba(0, 0, 0, 0.11)
  a.user
    color #FFF !important
    &:hover
      border-bottom 1px solid
  .description
    color rgba(255, 255, 255, 0.6)
  &:hover
    background rgba(255, 255, 255, 0.09)
  &.selected
    background rgba(255, 255, 255, 0.12)
    transition background .2s


.requestContainer
  +above(568px)
    display flex
    vendor(flex-wrap, wrap)

.Request
  position relative
  padding 20px
  height 300px
  text-align center
  border-radius 4px
  background rgba(204, 78, 78, 0.23)

  // 2 columns
  +above(568px)
    width calc(50% - 10px)
    margin 5px  

  // 3 - 6 columns
  for i in (3..6)
    +above(300px * i + 300px)
      width 'calc(100% / %s - 10px)' % i
      
  .actions
    position absolute
    left 0
    right 0
    bottom 0
    border-radius 2px
    overflow hidden
    button
      width 50%
      background rgba(0, 0, 0, 0.06)
      color rgba(203, 115, 115, 0.76)
      padding 5px 0
      font-weight 400
      font-size 16px
      &:first-child
        border-right 1px solid rgba(255, 255, 255, 0.14)