#admin
  margin-bottom 60px
  .navigation
    display table
    width 100%
    margin-top -20px
    margin-bottom 20px
    a
      float left
      width calc(100% / 6)
      padding 20px 0
      text-align center
      color color rgba(255, 255, 255, 0.5)
      transition color .2s
      &:hover
        color #FFF
        transition none

  a
    color rgba(255, 255, 255, 0.5)

  input, textarea, button, select
    margin-bottom 5px
    padding 10px
    color #000
    background #FFF
    border none
    border-radius 3px

  textarea
    width 100%
    height 400px
    resize vertical

  button
    width auto
    padding 5px 10px

  select
    height 34px
    
  .request
    border 1px solid
    width 50%
    padding 10px