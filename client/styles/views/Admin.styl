#Admin
  .navigation
    displayFlex()
    margin-top -20px
    margin-bottom 20px
    border-bottom 1px solid rgba(255, 255, 255, 0.2)
    a
      flex-grow 1
      padding 20px 0
      text-align center
      color rgba(255, 255, 255, 0.5)
      transition color .2s
      &.active
        color #FFF
      &:hover
        color #FFF
        transition none
        
  .pin
    margin-bottom 10px
    padding 20px
    border-radius 5px
    background rgba(0, 0, 0, 0.07)

  .manageArticle
    display flex
    align-items center
    padding 10px 0px
    font-weight 200
    border-bottom 1px solid rgba(255, 255, 255, 0.1)
    > *:not(:last-child)
      margin-right 10px
      padding-right 10px
      border-right 1px solid rgba(255, 255, 255, 0.2)

    .title
      color #FFF
      font-weight 300

    .author, .TimeSince
      font-size 14px
      color rgba(255, 255, 255, 0.5)

    button
      display inline-flex
      padding 0 5px
      border-radius 3px
      background rgba(255, 255, 255, 0.18)
      &:hover
        background rgba(255, 255, 255, 0.3)
      svg
        transform rotate(24deg)
        
  .goodSearch
    width 500px
    background white
    padding 10px
    border-radius 5px
    color #333
    border 0px
    margin-bottom 10px

#ManageUsers
  .removePic
    color: #fff;
    clear: both;
    padding: 5px 10px;
    font-size: 13px;
    display: block;
    margin-bottom: 10px;
    width: 200px;
    margin-top: -6px;
    border-radius: 0px 0px 5px 5px;
    background: rgba(255,255,255,0.1);

#ManageCrew .btn
  font-size 13px
  padding 5px

#ManageArticle
  textarea
    width 100%
    min-height 300px

#ManageReservations
  .day
    margin-bottom 40px
  .date
    margin-bottom 10px
    padding-bottom 6px
    font-size 20px
    border-bottom 1px solid rgba(255, 255, 255, 0.13)

  .reservationList
    padding 20px
    background rgba(0, 0, 0, 0.07)
    text-align center
    border-radius 5px
    :last-child
      margin-bottom 0
    
.ReservationItem
  margin-bottom 10px
  padding 10px
  border-radius 4px
  cursor pointer
  .timeContainer
    displayFlex()
    width 138px
    margin 0 auto 6px auto
    align-items center
    justify-content space-between
    span
      font-size 25px
    .time
      padding 10px
      font-size 17px
      border-radius 4px
      background rgba(0, 0, 0, 0.11)
  a.user
    color #FFF !important
    &:hover
      border-bottom 1px solid
  .description
    color rgba(255, 255, 255, 0.6)
  &:hover
    background rgba(255, 255, 255, 0.09)
  &.selected
    background rgba(255, 255, 255, 0.12)
    transition background .2s


.requestContainer
  +above(568px)
    displayFlex()
    flex-wrap wrap

.SongRequest
  position: relative;
  padding: 10px 20px 60px 20px;
  overflow: auto;
  width: 100%;
  height: auto;
  margin-top 10px
  border-bottom 1px solid rgba(255, 255, 255, 0.15)
  
  .name
    opacity .5
    font-size 18px
  
  .song
    font-weight bold
    font-style italic
    
  .iptime
    color rgba(255,255,255,0.5)
    
  .actions
    position absolute
    left 0
    right 0
    bottom 0
    border-radius 2px
    overflow hidden
    button
      width: 100px;
      color: rgba(255, 255, 255, 0.3)
      padding: 5px 0px 4px 0px;
      font-weight: 400;
      font-size: 14px;
      border: 1px solid rgba(255, 255, 255, 0.3)
      margin: 10px 5px;
      border-radius: 50px;
      background: none;
      &:hover
        color white
        border 1px solid white