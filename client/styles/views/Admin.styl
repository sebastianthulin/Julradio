#Admin
  
  th, td
    width 150px
    text-align left

  .articleHeaderBox
    padding 15px 0px 13px 0px
    margin-top -1px
    border-bottom 1px solid rgba(255,255,255,0.1)
    border-top 1px solid rgba(255,255,255,0.1)
    display block
    width 100%
    font-size 18px
    font-weight 200
    line-height 18px
    
    .articleHeader
      color white
      font-weight 300
      border-right 1px solid rgba(255,255,255,0.2)
      padding 0px 10px 0px 0px
      
    .articleAuthor
      font-size 14px
      margin-left 10px
      border-right 1px solid rgba(255,255,255,0.2)
      padding 0px 10px 0px 0px
      color rgba(255,255,255,0.5)

    .articleTime
      font-size 13px
      margin-left 10px
      color rgba(255,255,255,0.5)

  .navigation
    display table
    width 100%
    margin-top -20px
    margin-bottom 20px
    border-bottom 1px solid rgba(255,255,255,0.2)
    
    a
      float left
      width calc(100% / 6)
      padding 20px 0
      text-align center
      color rgba(255, 255, 255, 0.5)
      transition color .2s
      &.active
        color #FFF
      &:hover
        color #FFF
        transition none

#ManageArticle
  textarea
    width 100%
    min-height 300px
  .Article
    border-bottom none

#ManageReservations
  .day
    margin-bottom 40px
  .date
    margin-bottom 10px
    padding-bottom 6px
    font-size 20px
    border-bottom 1px solid rgba(255, 255, 255, 0.13)

  .reservationList
    padding 20px
    background rgba(0, 0, 0, 0.07)
    text-align center
    border-radius 5px
    :last-child
      margin-bottom 0
    
.ReservationItem
  margin-bottom 10px
  padding 10px
  border-radius 4px
  cursor pointer
  .time-container
    display flex
    width 138px
    margin 0 auto 6px auto
    align-items center
    justify-content space-between
    span
      font-size 25px
    .time
      padding 10px
      font-size 17px
      border-radius 4px
      background rgba(0, 0, 0, 0.11)
  a.user
    color #FFF !important
    &:hover
      border-bottom 1px solid
  .description
    color rgba(255, 255, 255, 0.6)
  &:hover
    background rgba(255, 255, 255, 0.09)
  &.selected
    background rgba(255, 255, 255, 0.12)
    transition background .2s

above(width)
  @media all and (min-width: width)
    {block}

.Request
  padding 45px 55px 30px
  position relative
  min-height 300px
  cursor pointer
  text-align center
  display flex
  flex-direction column
  -webkit-box-direction normal
  -webkit-box-orient vertical
  -webkit-justify-content center
  justify-content center
  color #fff
  border-bottom 3px solid rgba(0, 0, 0, 0.12)
  background #f00
  border-radius 4px
  &.tournament
    background #819EBF    // #869DB6

  // Grid item "border"
  &::before
    position absolute
    content ''
    top 0px
    right 55px
    bottom 0px
    left 55px
    border-bottom 1px solid rgba(74, 74, 74, 0.075)

  h2
    margin 0
    font-size 1.875em
    text-align center
    -webkit-flex 1
    flex 1
    display flex
    -webkit-align-items center
    align-items center
    -webkit-justify-content center
    justify-content center
    width 100%
    font-size 23px

  .loader
    height 1px
    width 40%
    margin 1em auto
    position relative
    background rgba(255, 255, 255, 0.2)

  .category
    margin 0
    position relative
    font-size 0.95em
    font-style italic
    font-family serif
    text-align center
    display block

  .meta
    font-size 0.765em
    text-align left
    color rgba(255, 255, 255, 0.54)

    i
      margin-right 4px

    img
      display block
      border-radius 50%
      margin 2em auto
      width 40px

    .number-seats, .blind-cost
      display block
      float left

    .blind-cost
      text-align right
      float right


// Viewport sizes based on column number
+above(600px)
  .Request
    padding 45px 45px 30px

+above(568px)
  .grid
    display flex
    flex-wrap wrap

  // 2 columns
  .Request
    width calc(50% - 10px)
    margin 5px
    &::before
      top 5px
      right 5px
      bottom 5px
      left 5px
      border 1px solid rgba(74, 74, 74, 0.075)
      transition opacity 0.3s

    &:hover::before
      border 3px solid darken(#f00, 3)
      
// 3 - 6 columns
for i in (3..6)
  +above(300px * i + 300px)
    .Request
      width 'calc(100% / %s - 10px)' % i