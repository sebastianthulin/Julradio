#messenger
  position relative
  min-height 450px
  height calc(100vh - 470px)
  background rgba(255, 0, 0, 0.2)
  .conversations
    width 60px
    height 100%
    border-right 1px solid rgba(255, 255, 255, 0.17)
    .conversation
      display block
      width 100%
      height 60px
      line-height 50px
      font-size 16px
      border-bottom 1px solid rgba(255, 255, 255, 0.17)
      padding 10px
      &.selected
        background rgba(255, 255, 255, 0.17)
        border-color transparent
      &:last-child
        border none

    .picture
      height 40px
      width 40px
      border-radius 50%
      background white
      display inline-block
      float left
      margin-right 10px

    .username
      color #FFF
      display none
      height 40px
      line-height 40px
      float left

    +tablet()
      width 25%
      .username
        display inline-block
      
  .chat
    position absolute
    right 0px
    top 0px
    width calc(100% - 60px)
    height 100%
    overflow scroll
    +tablet()
      width 75%
    
  .user
    display table
    position absolute
    top 0
    width 100%
    height 40px
    text-align center
    border-bottom 1px solid rgba(255, 255, 255, 0.17)
    a
      display table-cell
      vertical-align middle
      text-decoration none
      color #FFF
      font-size 18px
      &:hover
        text-decoration underline

  .message-container
    position absolute
    top 40px
    width 100%
    height calc(100% - 80px)
    padding-top 10px
    overflow-y scroll

  .message
    clear both
    padding 3px 10px
    margin 0 20px 10px
    border-radius 10px
    &.left
      background #D8D8D8
      color #000
      float left
    &.right
      background #0D840D
      float right

  input
    position absolute
    bottom 0
    width 100%
    height 40px
    padding 0 10px