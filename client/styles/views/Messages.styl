#messenger
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  .conversations
    width 60px
    height 100%
    .conversation
      display block
      width 100%
      height 60px
      line-height 50px
      font-size 16px
      border-bottom 1px solid rgba(255, 255, 255, 0.17)
      padding 10px
      &.unseen
        background rgba(0, 0, 0, 0.17)
        border-color transparent
      &.selected
        background rgba(255, 255, 255, 0.17)
        border-color transparent
      &:last-child
        border none

    .profile-picture
      height 40px
      width 40px
      background white
      display inline-block
      float left
      margin-right 10px

    .username
      color #FFF
      display none
      height 40px
      line-height 40px
      float left

    +tablet()
      width 25%
      .username
        display inline-block
      
  .chat
    position absolute
    right 0px
    top 0px
    width calc(100% - 60px)
    height 100%
    background rgba(0, 0, 0, 0.05)
    +tablet()
      width 75%
    
  .user
    display table
    position absolute
    top 0
    width 100%
    height 40px
    text-align center
    border-bottom 1px solid rgba(255, 255, 255, 0.17)
    a
      display table-cell
      vertical-align middle
      text-decoration none
      color #FFF
      font-size 18px
      &:hover
        text-decoration underline

  .message-container
    position absolute
    top 40px
    width 100%
    height calc(100% - 80px)
    padding 10px 20px 0
    overflow-y scroll

  .message
    clear both
    padding 3px 10px
    margin-bottom 10px
    border-radius 10px
    word-break break-all
    &.left
      background #D8D8D8
      color #000
      float left
      margin-right 40px
    &.right
      background #0D840D
      float right
      margin-left 40px

  input
    position absolute
    bottom 0
    width 100%
    height 40px
    padding 0 10px