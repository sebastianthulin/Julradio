.messenger
  position relative
  height 700px
  .conversations
    width 30%
    height 100%
    padding 20px
    background rgba(255, 255, 255, 0.15)
    .conversation
      display block
      width 100%
      height 60px
      line-height 50px
      font-size 16px
      border-bottom 1px solid rgba(255, 255, 255, 0.37)
      padding 10px 5px
      &.selected
        background #F00

    .picture
      height 40px
      width 40px
      border-radius 50%
      background white
      display inline-block
      float left
      margin-right 10px

    .username
      color #FFF
      display inline-block
      height 40px
      line-height 40px
      float left
      
  .chat
    position absolute
    right 0px
    top 0px
    width 70%
    height 100%
    background rgba(255, 255, 255, 0.1)
    overflow scroll
    
  .user
    position absolute
    top 0
    width 100%
    text-align center
    background #f00

  .message-container
    width 100%
    height calc(100% - 40px)
    padding-top 10px
    overflow-y scroll

  .message
    clear both
    padding 3px 10px
    margin 0 20px 10px
    border-radius 10px
    &.left
      background #D8D8D8
      color #000
      float left
    &.right
      background #0D840D
      float right

  input
    position absolute
    bottom 0
    width 100%
    height 40px
    padding 0 10px
    outline none
    border none