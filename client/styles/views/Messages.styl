.chat
  width 70%
  height 500px
  margin auto
  background rgba(255,255,255,0.1)
  float right
  
  .message
    display block
    padding 20px
    
    .left
      padding 3px 10px 2px 10px
      background green
      border-radius 10px
      float left
      
    .right
      padding 3px 10px 2px 10px
      background green
      border-radius 10px
      float right
  
.friends
  width 30%
  float left
  background rgba(255,255,255,0.15)
  height 500px
  padding 20px
  
  .friend
    width 100%
    height 60px
    line-height 50px
    font-size 16px
    border-bottom 1px solid white
    padding 10px 5px
    
  .picture
    height 40px
    width 40px
    border-radius 50%
    background white
    display inline-block
    float left
    margin-right 10px
    
  .namn
    display inline-block
    height 40px
    line-height 40px
    float left