@keyframes stretch
  from
    max-height 0px
  to
    max-height 140px

#Settings
  max-width 600px
  
  button
    width 80px
    background none
    color white
    border-radius 50px
    border 1px solid white
    margin-right 10px

  h1
    margin-bottom 40px
    font-size 35px

  .avatarPreview
    margin-bottom .5em
    width 50px
    height 50px
    background-position center
    background-size 100%
    border-radius 50%
  .ani
    animation stretch .2s
    overflow hidden

  .confirmation
    display flex
    padding-left 130px
    margin-bottom 20px
    p
      margin 0px
      color rgba(255, 255, 255, 0.48)

    .btn
      margin-left 20px