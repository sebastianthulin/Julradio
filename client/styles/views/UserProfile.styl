#UserProfile
  > header
    width 100%
    text-align center
    padding 50px 0px
    font-size 14px
    color rgba(255,255,255,0.7)
    .ProfilePicture
      width 150px
      height 150px
      margin 0 auto

    .title
      color #FF0    

    .name
      color white
      margin-top 10px
      font-size 25px
      font-weight 100
      font-family Lobster
      line-height 30px

    .identity
      color rgba(255,255,255,0.9)

    .description
      color rgba(255,255,255,0.8)
      hyphens()
      
#ProfileOptions
  position absolute
  margin-top 165px
  .action
    margin-bottom 10px
    color #FFF
    display block
    width 150px
    border-radius 3px
    background rgba(0,0,0,0.2)
    height 27px
    line-height 30px
    text-align center
    font-size 12px
    cursor pointer

.wall
  width 580px
  margin 0 auto
  > form
    margin-bottom 20px
    textarea
      width 100%
      border-radius 3px
      background white
      padding 14px 10px 10px 14px
      color #333
      height 50px
      font-size 14px
      min-height 100px