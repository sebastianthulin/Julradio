.wall
  width 580px
  float right
  padding 20px
  
  .wallMessage
    width 100%
    border-radius 5px
    background white
    padding 14px 10px 10px 14px
    color #333
    font-size 12px
    
  .wallPostText
    font-size 13px
    color white
    display table
    padding 10px 5px 0px 5px
    
  .wallPost
    background rgba(0,0,0,0.15)
    border-radius 5px
    width 540px
    margin-top 10px
    display table
    padding 10px
    
    .wallPostAuthor
      height 50px
      width 520px
      float right
      padding-bottom 5px
      border-bottom 1px solid rgba(255,255,255,0.1)
      display table
      
      .wallPostAuthorPicture
        width 40px
        height 40px
        border-radius 50%
        margin-right 10px
        float left
        background-size 100% auto
        
      .wallPostAuthorName
        color #FFF
        text-decoration none
        &:hover
          border-bottom 1px solid
        
      .wallPostAuthorTime
        font-size 10px
        color rgba(255,255,255,0.5)
        margin-top -5px

.profileBox
  width 580px
  height 300px
  float left
  
  .title
    color #FF0
  
  .profPicture
    width 150px
    height 150px
    border-radius 50%
    background white
    float left
    overflow hidden
    img
      width 100%
    
  .profPM
    color #FFF
    display block
    position absolute
    margin-top 165px
    width 150px
    border-radius 3px
    background rgba(0,0,0,0.2)
    height 27px
    line-height 30px
    text-align center
    font-size 12px
    cursor pointer
    
  .profName, .profAge, .profText
    display table
    width 390px
    float right
    margin-right 20px
    
  .profName
    margin-top 10px
    font-size 25px
    font-weight 100
    font-family Lobster
    line-height 30px
  
  .profAge
    font-size 14px
    color rgba(255,255,255,0.5)
    
  .profText
    color rgba(255,255,255,0.7)
    font-size 14px
    
    .profTextBox
      width 500px
      float left
    