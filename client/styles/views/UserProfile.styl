.profileBox
  width 100%
  height 300px
  
  .title
    color #FF0
  
  .profPicture
    width 150px
    height 150px
    border-radius 50%
    background white
    float left
    
  .profPM
    color #FFF
    display block
    position absolute
    margin-top 165px
    width 150px
    border-radius 3px
    background rgba(0,0,0,0.2)
    height 27px
    line-height 30px
    text-align center
    font-size 12px
    cursor pointer
    
  .profName, .profAge, .profText
    display table
    width calc(100% - 170px)
    margin-left 20px
    float right
    
  .profName
    margin-top 10px
    font-size 25px
    font-weight 100
    font-family Lobster
    line-height 30px
  
  .profAge
    font-size 14px
    color rgba(255,255,255,0.5)
    
  .profText
    margin-top 10px
    color rgba(255,255,255,0.7)
    font-size 14px
    
    .profTextBox
      width 500px
      float left
    