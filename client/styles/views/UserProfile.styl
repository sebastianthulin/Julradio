#UserProfile
  max-width 580px
  margin 0 auto
  > header
    width 100%
    text-align center
    padding 50px 0px
    font-size 14px
    color rgba(255, 255, 255, 0.7)
    .ProfilePicture
      width 150px
      height 150px
      margin 0 auto

    .title
      color #FF0    

    .name
      color white
      margin-top 10px
      font-size 25px
      font-weight 100
      font-family Lobster
      line-height 30px
      hardcoreHyphens()

    .identity
      color rgba(255, 255, 255, 0.9)

    .description
      color rgba(255, 255, 255, 0.8)
      hyphens()
      a.highlight
        color #FF0
      a:hover
        border-bottom 1px solid

#ProfileOptions
  display table
  .action
    float left
    margin-right 5px
    margin-bottom 10px
    padding 8px 10px
    cursor pointer
    color #FFF
    border-radius 3px
    background rgba(0, 0, 0, 0.2)