*
  box-sizing border-box

body
  margin 0
  color #FFF
  background #280000 url("/images/dark-red-christmas-background.jpg") fixed 100%
  &.no-scroll
    overflow hidden
    
body, input, textarea, button, select
  font-family 'Proxima Nova Light'

#app
  margin 0 auto
  max-width 1280px
  width 100%

.content
  padding 30px
  background rgba(80, 34, 34, 0.61)
  background rgba(0, 0, 0, 0.2)
  +desktop()
    padding 40px 60px

#snowfall
  position absolute
  display block
  pointer-events none
  top 0
  left 0
  
.historyPop
  position: absolute;
  background-color: #BE1C1C;
  padding: 10px;
  border-radius: 5px;
  box-shadow: 2px 2px 10px rgba(0,0,0,0.1);
  width: 400px;
  min-height: 120px;
  font-family: 'Proxima Nova Light';
  font-size: 15px;
  text-transform: uppercase;
  margin-top: -65px;
  margin-left: 35px;
  
  .tidigare
    color rgba(255,255,255,0.5)
    text-transform: capitalize
    margin-bottom 5px
    display block