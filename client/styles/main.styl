*
  box-sizing border-box

body
  margin 0
  color #FFF
  background #280000 url("/images/dark-red-christmas-background.jpg") fixed 100%
  &.no-scroll
    overflow hidden
    
body, input, textarea, button, select
  font-family 'Proxima Nova Light'

#app
  margin 0 auto
  max-width 1280px
  width 100%

.content
  padding 30px
  background rgba(80, 34, 34, 0.61)
  background rgba(0, 0, 0, 0.2)
  +desktop()
    padding 40px 60px

#snowfall
  position absolute
  display block
  pointer-events none
  top 0
  left 0
  
.footer
  width 100%
  background rgba(255,0,0,0.2)
  padding 20px 20px 30px 20px
  margin-bottom 50px
  display table
  
  .footerLogo
    font-family Lobster
    font-size 24px
    margin-bottom 10px
    display block
        
  .section
    float left
    display table
    
    .fRow
      display table
      line-height 20px
      height 20px
      
      .fRowOne
        width 120px
        float left
        font-weight bold
        color rgba(255,255,255,0.9)
        
      .fRowTwo
        margin-right 70px
        float left
        color rgba(255,255,255,0.7)
