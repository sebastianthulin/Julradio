*
  box-sizing border-box

body
  margin 0
  color #FFF
  background #280000 url('/images/dark-red-christmas-background.jpg') fixed center
  &.no-scroll
    overflow hidden
    
body, input, textarea, button, select
  font-family 'Roboto'
  outline none
  border none
  border-radius 0
  
a
  color #0F0
  text-decoration none

#app
  margin 0 auto
  max-width 1280px
  width 100%

.content
  padding 30px
  background rgba(255, 0, 0, 0.2)
  +desktop()
    padding 40px 60px

#snowfall
  position absolute
  pointer-events none
  top 0
  left 0

.markdown-body
  word-wrap break-word
  // word-break break-all
  :last-child
    margin-bottom 0
  p, blockquote, ul, ol, dl, table, pre
    margin-top 0
  h1, h2, h3, h4, h5, h6
    margin-bottom 12px
  ul, ol
    padding-left 29px
  blockquote
    padding 0 15px
    border-left 4px solid #ddd
    margin-left 0