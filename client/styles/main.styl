*
  box-sizing border-box

body
  margin 0
  color #FFF
  background #280000 url('/images/dark-red-christmas-background.jpg') fixed 100%
  &.no-scroll
    overflow hidden
    
body, input, textarea, button, select
  font-family 'Proxima Nova Light'
  outline none
  border none
  border-radius 0

#app
  margin 0 auto
  max-width 1280px
  width 100%

.content
  padding 30px
  background rgba(255, 0, 0, 0.2)
  +desktop()
    padding 40px 60px

#snowfall
  position absolute
  pointer-events none
  top 0
  left 0
  
.settingsInput
  height 40px
  line-height 42px
  padding 0px 10px
  border-radius 3px
  margin-bottom 10px
  width 230px
  
.settingsSave
  height 40px
  line-height 42px
  padding 0px 10px
  border-radius 3px
  width 230px
  background white
  
.settingsInputArea
  min-height 100px
  line-height 16px
  padding-top 10px
  margin-bottom 2px
  resize vertical
  
input[type="file"]
  color white
  line-height 16px

h6
  margin 10px 0px 0px 0px
  
h4
  margin 0px 0px 10px 0px