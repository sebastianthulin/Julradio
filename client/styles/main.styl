*
  box-sizing border-box

body
  margin 0
  color #FFF
  background #280000 url('/images/dark-red-christmas-background.jpg') fixed center
  &.noScroll
    overflow hidden

body, input, textarea, button, select
  font-family 'Roboto'
  outline none
  border none
  border-radius 0
  font-weight 300

button
  cursor pointer
  
a
  color #FFF
  text-decoration none
  
.veryBeautifulLine
  width 800px
  height 1px
  background rgba(255,255,255,0.1)

#App.sidebarVisible
  #site:after
    pointer-events auto
    background-color rgba(17, 17, 17, 0.8)
  #Sidebar
    transform none
  #MobileHeader
    pointer-events none
    opacity 0
  
#site
  position relative
  top 50px
  left 0
  width 100%
  height calc(100% - 50px)
  min-height calc(100vh - 50px)
  padding 20px
  background rgba(108, 8, 8, 0.8)
  +mobile()
    padding 40px
  +desktop()
    top 0
    left 300px
    width calc(100% - 300px)
    height 100%
    min-height 100vh
  &:after
    content ''
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    pointer-events none
    background rgba(0, 0, 0, 0)
    transition background-color .4s

#Snowfall
  position absolute
  pointer-events none
  top 0
  left 0
  z-index -1

input:not(.clean),
select:not(.clean),
textarea:not(.clean)
  padding 14px 0
  font-size 16px
  color #FFF
  border solid rgba(255, 255, 255, 0.2)
  border-width 0 0 2px 0
  background none
  transition border-color .2s
  &:focus
    border-color rgba(255, 255, 255, 0.6)
    transition none

textarea:not(.clean)
  min-height 125px
  padding 14px
  border-width 2px
  resize vertical

.setting
  display flex
  margin-bottom 20px
  align-items center
  .label
    width 130px
    font-size 14px
    color rgba(255, 255, 255, 0.4)
  input, select, textarea
    width calc(100% - 130px)

.btn
  height 50px
  padding 0px 20px
  color #FFF
  background rgba(255, 255, 255, 0.19)
  border-radius 3px

.markdownBody
  color rgba(255, 255, 255, 0.76)
  word-wrap break-word
  // word-break break-all
  :last-child
    margin-bottom 0
  p, blockquote, ul, ol, dl, table, pre
    margin-top 0
  h1, h2, h3, h4, h5, h6
    color rgba(255, 255, 255, 0.95)
    margin-bottom 12px
  ul, ol
    padding-left 29px
  blockquote
    padding 0 15px
    border-left 4px solid rgba(255, 255, 255, 0.8)
    margin-left 0
  a:hover
    border-bottom 1px solid