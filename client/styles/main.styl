*
  box-sizing border-box

body
  margin 0
  color #FFF
  background #280000 url('/images/dark-red-christmas-background.jpg') fixed center
  &.no-scroll
    overflow hidden
    
body, input, textarea, button, select
  font-family 'Roboto'
  outline none
  border none
  border-radius 0
  font-weight 300
  
a
  color #FFF
  text-decoration none

#app.sidebar-visible
  #site:after
    pointer-events auto
    background rgba(0, 0, 0, 0.69)
  #sidebar
    transform none
  #mobile-header
    opacity 0
  
#site
  position absolute
  top 50px
  left 0
  width 100%
  height calc(100% - 50px)
  padding 20px
  +tablet()
    top 0
    left 300px
    width calc(100% - 300px)
    height 100%
  &:after
    content ''
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    pointer-events none
    background rgba(0, 0, 0, 0)
    transition background .4s

.content
  padding 20px
  background rgba(130, 9, 9, 0.75)
  border-radius 5px
  margin-bottom 20px
  overflow hidden
  header
    font-size 33px
    margin -20px -20px 20px
    padding 6px 20px
    background rgba(0, 0, 0, 0.15)

#snowfall
  position absolute
  pointer-events none
  top 0
  left 0
  z-index -1
  
.profile-picture
  border-radius 50%

.markdown-body
  color rgba(255, 255, 255, 0.76)
  word-wrap break-word
  // word-break break-all
  :last-child
    margin-bottom 0
  p, blockquote, ul, ol, dl, table, pre
    margin-top 0
  h1, h2, h3, h4, h5, h6
    color rgba(255, 255, 255, 0.95)
    margin-bottom 12px
  ul, ol
    padding-left 29px
  blockquote
    padding 0 15px
    border-left 4px solid rgba(255, 255, 255, 0.8)
    margin-left 0
  a:hover
    border-bottom 1px solid