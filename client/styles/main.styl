*
  box-sizing border-box

body
  margin 0
  color #FFF
  background #280000 url("/images/dark-red-christmas-background.jpg") fixed 100%
  &.no-scroll
    overflow hidden
    
body, input, textarea, button, select
  font-family 'Proxima Nova Light'
  outline none

#app
  margin 0 auto
  max-width 1280px
  width 100%

.content
  padding 30px
  background rgba(255, 0, 0, 0.2)
  +desktop()
    padding 40px 60px

#snowfall
  position absolute
  display block
  pointer-events none
  top 0
  left 0
