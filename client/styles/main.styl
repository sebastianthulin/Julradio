*
  box-sizing border-box

body
  margin 0
  font-family 'Proxima Nova Light'
  // font-size 17px
  // line-height 1.4
  color #FFF
  background #280000 url("/images/dark-red-christmas-background.jpg") repeat fixed 100% center / 100% auto
  &.no-scroll
    overflow hidden

#app
  margin 0 auto
  max-width 1280px
  width 100%

.content
  padding 30px
  background rgba(0, 0, 0, 0.2)

  // Larger than tablet
  @media (min-width: 1000px)
    padding 40px 60px

#snowfall
  position absolute
  display block
  pointer-events none
  top 0
  left 0