    width 200px
    height 200px
    margin 0 auto
    margin-bottom 35px
  .avatarPreview
    height 200px
    width 200px
    margin 0 auto
    margin-bottom 35px
    background-position 50%
    background-size 100%
    background-repeat no-repeat   // :(
