#ModalContainer
  position fixed
  z-index 1
  display flex
  align-items center
  top 0
  left 0
  width 100%
  height 100%
  background rgba(14, 44, 56, 0)
  transition background .1s
  pointer-events none
  &.visible
    background rgba(14, 44, 56, 0.6)
    pointer-events auto

.Modal
  width 540px
  margin 0 auto
  padding 30px 50px 50px
  background #9F2C2C url('/images/dark-red-christmas-background.jpg') center / 200%
  border-radius 5px
  overflow hidden
  z-index 1
  box-shadow 0 0 20px rgba(0, 0, 0, 0.3)
  transform rotateX(-70deg)
  transition transform .4s cubic-bezier(0.12, 0.4, 0.29, 1.455)
  &.animateIn
    transform rotateX(0deg)

  header
    display table
    margin 0px auto 30px
    padding-bottom 2px
    letter-spacing -1px
    font-size 20px
    text-align center
    text-transform uppercase
    color rgb(255, 255, 255)
    border-bottom 1px solid rgb(221, 0, 0)

  label
    padding-left 20px
    text-transform uppercase
    font-size 12px
    color #C56360

  input, button, textarea
    color #FFF
    width 100%
    border none
    margin 0 0 10px 0
    padding 10px 20px
    background rgba(255, 255, 255, 0.2)
    border-radius 3px

  textarea
    height 100px
    resize none

  button
    margin-top 20px

  .misq
    display inline-block
    float right
    color #9C504E
    cursor pointer