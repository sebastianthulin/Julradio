#modal-container
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background rgba(41, 47, 51, 0.65)

.modal
  position absolute
  width 580px
  height 360px
  top 0
  left 0
  right 0
  bottom 0
  margin auto
  background #9F2C2C
  border-radius 3px
  overflow hidden
  z-index 1
  header
    padding 10px 0
    background #E6E6E6
    font-size 20px
    text-align center
    color #9F2C2C

  main
    padding 20px

  .left-column
    float left
    width 47%
  .right-column
    float right
    width 47%
  .divider
    position absolute
    width 1px
    top 20px
    bottom 20px
    left 0
    right 0
    margin 0 auto
    background rgba(255, 255, 255, 0.07)

  input, button, textarea
    color #FFF
    width 100%
    border none
    margin 0 0 10px 0
    padding 10px
    background rgba(255, 255, 255, 0.15)
    border-radius 3px

  textarea
    height 100px
    resize none

  button
    width auto
    padding 5px 10px
    
  .submit
    text-align right