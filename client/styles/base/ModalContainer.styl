#modal-container
  position fixed
  display flex
  align-items center
  top 0
  left 0
  width 100%
  height 100%
  background rgba(14, 44, 56, 0.6)

.modal
  width 580px
  margin 0 auto
  padding 30px 70px
  background #9F2C2C url('/images/dark-red-christmas-background.jpg') center / 200%
  border-radius 5px
  overflow hidden
  z-index 1
  box-shadow 0 0 20px rgba(0, 0, 0, 0.3)
  header
    display table
    margin 0px auto 30px
    font-family 'Proxima Nova Cond Light'
    font-size 20px
    text-align center
    text-transform uppercase
    color rgb(255, 255, 255)
    border-bottom 1px solid rgb(221, 0, 0)

  .left-column
    float left
    width 47%
  .right-column
    float right
    width 47%
  .divider
    position absolute
    width 1px
    top 20px
    bottom 20px
    left 0
    right 0
    margin 0 auto
    background rgba(255, 255, 255, 0.07)

  label
    padding-left 20px
    text-transform uppercase
    font-size 12px
    color rgba(255, 255, 255, 0.42)

  input, button, textarea
    color #FFF
    width 100%
    border none
    margin 0 0 10px 0
    padding 10px 20px
    background rgba(255, 255, 255, 0.15)
    border-radius 3px

  textarea
    height 100px
    resize none

  button
    width auto
    margin-top 20px
    padding 5px 10px
    
  .submit
    text-align right