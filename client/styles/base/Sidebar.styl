#Sidebar
  position fixed
  z-index 1
  top 0
  left 0
  width 300px
  height 100%
  background rgba(130, 9, 9, 0.75)
  transform translateX(-300px)
  transition transform .4s
  overflow hidden
  @media (max-height: 700px)
    .inner
      padding-top 20px !important
    .ProfilePicture, hr
      display none
    .logo a
      font-size 32px !important

  +desktop()
    transform none

  .inner
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    height 100%
    padding-top 30px
    &.abandoned
      display block
      #Player
        position absolute
        bottom 0

  .divider
    height 1px
    width 40%
    background rgba(255, 255, 255, 0.36)

  .logo
    text-align center
    a
      color #FFF
      font-size 52px
      font-family 'Lobster'
      transition opacity .2s
      &:hover
        opacity 0.6
        transition none
    hr
      width 100px
      margin 0px auto
      color #FFF

  .user
    text-align center
    .ProfilePicture
      width 140px
      height 140px
      margin 0 auto 10px
    .handle
      font-size 14px
      color rgba(255, 255, 255, .5)

  .loginArea
    margin 50px 0px
    padding 50px 0px
    text-align center
    background rgba(255, 0, 0, 0.1)
    button
      display block
      width 200px
      margin 0 auto
      padding 10px
      color #FFF
      border 1px solid rgba(255, 255, 255, 0.22)
      background none
      border-radius 3px
      i
        margin-left 4px
        font-size 13px

  button.userAction
    padding 0
    color #FFF
    background none
    transition opacity .2s
    position relative
    &:hover
      opacity 0.6
      transition none
    .notification
      color red
      position absolute
      left 50%
      top 25%
      transform translate(-50%, -50%)
      font-size 13px
      font-weight bold
    svg
      display block
      width 32px
      height 40px
      margin 0 auto 6px auto
    span
      font-size 13px

  .shortcuts a
    display table
    margin 0 auto
    text-align center
    color rgba(255, 255, 255, 0.6)
    transition color .2s
    &:hover
      color #FFF
      transition none

#Player
  width 100%
  .program
    padding 10px
    text-align center
    background rgba(23, 8, 8, 0.1)

#Player .main
  height 80px
  width 100%
  background rgba(0, 0, 0, 0.26)
  .songTitle
    white-space nowrap
    overflow hidden
  img
    width 80px
    height 100%
    float left
  .titleControls
    display flex
    flex-direction column
    justify-content space-between
    height 100%
    padding 14px
    .controls
      display flex
      //align-items center
      //justify-content space-between
      a.host
        font-weight 400
        &:hover
          border-bottom 1px solid
      .item
        margin-right 12px
        width 20px
      i
        font-size 24px
        cursor pointer
        width 100%
      .volumeControl
        position relative
        &:hover #VolumeSlider, #VolumeSlider.adjusting
          visibility visible
          opacity 1
          transition none
          transition-delay 0s

#VolumeSlider
  visibility hidden
  opacity 0
  transition visibility .25s, opacity .25s ease
  transition-delay .2s
  position absolute
  left 0px
  right 0px
  bottom 32px
  height 100px
  width 8px
  background #FFF
  border-radius 10px
  margin 0 auto
  cursor pointer
  .volume
    position absolute
    pointer-events none
    display inline-block
    width 100%
    background #DD1616
    border-radius 10px
    bottom 0
  .handle
    position absolute
    display inline-block
    margin-top -8px
    margin-left -2.5px
    width 12px
    height 12px
    border-radius 50%
    background #FFF