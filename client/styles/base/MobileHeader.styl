#MobileHeader
  display flex
  align-items center
  position fixed
  z-index 1
  height 50px
  width 100%
  background rgba(140, 17, 17, 0.95)
  transition opacity .4s
  +desktop()
    display none

  .openMenu
    position absolute
    top 0
    left 0
    height 100%
    padding 0px 16px
    font-size 24px
    color #FFF
    background none

  a.logo
    margin 0px auto
    font-family 'Lobster'
    font-size 32px
    transition opacity .2s
    &:hover
      opacity 0.6
      transition none