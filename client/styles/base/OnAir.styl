#on-air
  position relative
  padding 30px 0
  background rgba(0, 0, 0, 0.15)
  text-align center
  .info
    .meta-1
      color #CF3131
    span
      display block
      margin-bottom -4px

  .avatar
    display table
    margin 0 auto
    border 4px solid rgba(255, 0, 0, 0.52)
    border-radius 50%
    .image
      position relative
      width 170px
      height 170px
      border-radius 50%
      background transparent url('/images/berkleyill.jpg') repeat scroll 0px -10px / 170px auto
      overflow hidden
    .play-status
      position absolute
      width 100%
      bottom 10px
      padding 8px 0px
      background rgba(0, 0, 0, 0.63)
      i
        margin-right 6px

  .volume-slider
    width 140px
    height 6px
    margin 20px auto
    border-radius 3px
    background rgba(255, 255, 255, 0.27)
    text-align left
    overflow hidden
    cursor pointer
    .volume
      display inline-block
      vertical-align top
      height 100%
      background #DD1616
    .knot
      position absolute
      display inline-block
      margin-top -3px
      margin-left -6px
      width 12px
      height 12px
      border-radius 50%
      background #FFF