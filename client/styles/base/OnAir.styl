.playBox
  position absolute
  right 30px
  top 30px
  button
    border 2px solid white
    font-weight 500
    line-height 36px

#on-air
  margin 0 auto
  padding 30px
  display table
  width 100%
  position relative
  background rgba(255, 0, 0, 0.3)
  @media (min-width: 1280px)
    border-radius 3px 3px 0 0

  .avatar
    width 150px
    height 150px
    border-radius 5px
    float left
    background transparent url('/images/berkleyill.jpg') repeat scroll 0px -10px / 150px auto
    /* Larger than mobile */
    @media (max-width: 800px)
      float none
      margin 0 auto
  .lol
    margin-left 16px
    float left
    position relative
    width calc(100% - 200px)
    height 100%
    line-height 1
    @media (max-width: 800px)
      padding-top 30px
      width 100%
  section
    width 100%
    position relative
    margin-bottom 20px
    &:last-child
      margin-bottom 0px
    &::after
      content ''
      position absolute
      width 1px
      top 4px
      bottom 4px
      left 31px
      background rgba(255, 255, 255, 0.22)
    .icon
      height 20px
      margin-right 24px
      margin-top 10px
      float left
    .meta
      display block
      color #FFF
      margin-bottom 5px
      &.frst
        color rgba(255, 255, 255, 0.5)
