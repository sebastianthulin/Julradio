.play-container
  position absolute
  top 0px
  right 0px
  width 210px
  height 210px
  border none
  background rgba(255,255,255,0.1)
  cursor pointer
  transition width .2s
  padding 0
  outline none
  i
    position absolute
    height 40px
    top 5px
    bottom 0px
    left 0px
    right 0px
    margin auto
    font-size 32px
    color #FFF
  span
    position absolute
    left 0px
    bottom 45px
    width 100%
    font-size 15px
    color #FFF
    
.volume-slider
  position absolute
  right 220px
  width 120px
  height 20px
  background #F00
  .volume
    height 100%
    background #FF0


#on-air
  margin 0 auto
  padding 30px
  display table
  width 100%
  position relative
  background rgba(255, 0, 0, 0.3)
  @media (min-width: 1280px)
    border-radius 3px 3px 0 0

  .avatar
    width 150px
    height 150px
    border-radius 5px
    float none
    background transparent url('/images/berkleyill.jpg') repeat scroll 0px -10px / 150px auto
    margin 0 auto
    +tablet()
      float left
      margin 0
  .lol
    float left
    width 100%
    margin-left 0
    padding-top 30px
    position relative
    height 100%
    line-height 1
    +tablet()
      width calc(100% - 200px)
      margin-left 16px
      padding-top 0
  section
    width 100%
    position relative
    margin-bottom 20px
    &:last-child
      margin-bottom 0px
    &::after
      content ''
      position absolute
      width 1px
      top 4px
      bottom 4px
      left 31px
      background rgba(255, 255, 255, 0.22)
    .icon
      height 20px
      margin-right 24px
      margin-top 10px
      float left
    .meta
      display block
      color #FFF
      margin-bottom 5px
      &.frst
        color rgba(255, 255, 255, 0.5)
