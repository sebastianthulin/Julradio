#on-air
  position relative
  text-align center
  background rgba(0, 0, 0, 0.15)
  &.ya
    .host, .avatar, .volume-slider
      opacity 0

  .flex-container
    height 394px
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    padding 30px 0

  .host, .now-playing
    transition opacity .4s
    .meta
      color #CF3131
    span
      display block
      margin-bottom -4px

  .now-playing
    padding 10px
    border-radius 3px
    background rgba(255, 255, 255, 0.09)
    cursor pointer
    overflow hidden
    &.big
      position absolute
      top 0px
      left 0px
      right 0px
      height 100%
      border-radius 0px

  .avatar
    border 4px solid rgba(255, 0, 0, 0.52)
    border-radius 50%
    transition opacity .4s
    .image
      position relative
      width 170px
      height 170px
      border-radius 50%
      background transparent url('/images/berkleyill.jpg') repeat scroll 0px -10px / 170px auto
      overflow hidden
    .play-status
      width 100%
      bottom 10px
      padding 8px 0px
      background rgba(0, 0, 0, 0.63)
      margin-top 120px
      i
        margin-right 6px

  .volume-slider
    width 140px
    height 6px
    border-radius 3px
    background rgba(255, 255, 255, 0.27)
    text-align left
    overflow hidden
    cursor pointer
    transition opacity .4s
    .volume
      display inline-block
      vertical-align top
      height 100%
      background #DD1616
    .knot
      position absolute
      display inline-block
      margin-top -3px
      margin-left -6px
      width 12px
      height 12px
      border-radius 50%
      background #FFF