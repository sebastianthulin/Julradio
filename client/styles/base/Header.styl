#header
  position relative
  height 85px
  margin 0 auto
  background rgba(255, 0, 0, 0.3)
  .logo
    position absolute
    bottom 8px
    left 30px
    font-size 46px
    color #FFF
    text-decoration none
    &:hover
      color #a00
  .julradio
    font-family 'Lobster'
  .slogan
    font-size 13px
    position absolute
    width 200px
    top 52px
    left 21px
  .user
    position absolute
    right 0px
    top 0px
    .details
      margin 10px
      text-align right

    button
      background rgba(255,0,0,0.4)
      border 0px
      color white
      margin 0px 0px 0px 5px
      padding 3px 10px 1px 10px
      font-size 13px
      border-radius 0px 0px 4px 4px
      cursor pointer

.headerLinks
  height: 50px;
  margin-top: 38px;
  display: inline-table;
  position: absolute;
  left: 50%;
  margin-left: -239px;
  
  .linkItem
    float: left;
    display: table;
    font-size: 16px;
    margin-right: 20px;
    border-right: 1px solid #FFF;
    padding: 1px 20px 0px 0px;
    font-family: roboto;
    font-weight: 100;
    line-height: 16px;
    cursor pointer
    
    &:last-child
      margin-right 0px
      padding 1px 0px 0px 0px
      border-right 0px