#header
  position relative
  height 100px
  margin 0 auto
  .logo
    position absolute
    bottom 13px
    font-size 46px
    font-family lobster
  .slogan
    font-size 13px
    font-family roboto
    position absolute
    width 200px
    top 45px
    left 21px
    
  .listen
    position absolute
    right 0
    bottom 10px
    span
      float left
      margin 6px 9px 0px 0px
      font-size 20px
    .btn
      position relative
      float left
      width 40px
      height 40px
      margin 0 5px
      cursor pointer
      border-radius 50%
      background rgba(255, 0, 0, 0.3)
    img
      position absolute
      height 22px
      top 0
      left 0
      right 0
      bottom 0
      margin auto