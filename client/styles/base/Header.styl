#header
  display flex
  align-items center
  justify-content space-between
  padding 4px 30px
  background rgba(255, 0, 0, 0.3)
  +desktop()
    padding 4px 60px

  .julradio
    color #FFF
    font-size 46px
    font-family 'Lobster'
    text-decoration none
    transition color .2s
    &:hover
      color rgba(255, 255, 255, 0.78)

  .user
    button
      padding 0 20px
      background none
      color #FFF
      cursor pointer
      border none
      border-right 1px solid
    > button:last-child, > a:last-child button
      padding-right 0
      border-right none