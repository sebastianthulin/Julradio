#header
  display flex
  align-items center
  justify-content space-between
  padding 0 30px
  background rgba(255, 0, 0, 0.3)
  height 80px
  position relative
  +desktop()
    padding 0 60px
    
  .slogan
    position absolute
    left 84px
    top 53px
    font-size 13px
    pointer-events none

  .julradio
    color #FFF
    font-size 46px
    height 80px
    font-family 'Lobster'
    text-decoration none
    transition color .2s
    &:hover
      color rgba(255, 255, 255, 0.78)

  .menu
    margin-top 5px

    button
      padding 0 8px
      background none
      color #FFF
      cursor pointer
      font-weight 400

    i
      margin-right 5px
      &.big
        margin 0px
        font-size 20px
        display table-caption
        margin-bottom -5px

    .menu-divider
      display inline-block
      width 1px
      background-color #FFF
      height 24px
      margin 0px 5px -7px 8px