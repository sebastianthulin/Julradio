#header
  position relative
  height 100px
  margin 0 auto
  .logo
    position absolute
    bottom 8px
    left 60px
    font-size 46px
  .julradio
    font-family 'Lobster'
  .slogan
    font-size 13px
    position absolute
    width 200px
    top 49px
    left 21px
    
  .listen
    position absolute
    display table
    right 0
    bottom 10px
    span
      display table-cell
      vertical-align middle
      padding-right 9px
      font-size 20px
    .btn
      position relative
      float left
      width 40px
      height 40px
      margin 0 5px
      cursor pointer
      border-radius 50%
      background rgba(255, 0, 0, 0.3)
    img
      position absolute
      height 22px
      top 0
      left 0
      right 0
      bottom 0
      margin auto