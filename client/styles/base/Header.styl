#header
  display flex
  align-items center
  justify-content space-between
  padding 0 30px
  background rgba(255, 0, 0, 0.3)
  height 70px
  +desktop()
    padding 0 60px

  .julradio
    color #FFF
    font-size 46px
    font-family 'Lobster'
    text-decoration none
    transition color .2s
    &:hover
      color rgba(255, 255, 255, 0.78)

  .user
    button
      margin-left 4px
      padding 2px 6px
      background rgba(255, 255, 255, 0.17)
      color #FFF
      cursor pointer
      border none
      border-radius 3px
      font-family 'Proxima Nova Regular'