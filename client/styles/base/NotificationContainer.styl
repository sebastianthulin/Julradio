#NotificationContainer
  z-index 2
  position fixed
  top 10px
  right 10px
  width 280px
  noUserSelect()
  
.Notification
  margin-bottom 10px
  position absolute
  padding 10px
  color #000
  background #FFF
  border-radius 3px
  cursor pointer
  box-shadow 0 5px 10px rgba(0,0,0,.1)
  width 100%
  display table
  transition transform .4s
  .ProfilePicture
    width 50px
    height 50px
    float left
    margin-right 10px
  &.err
    color #FFF
    background #A00