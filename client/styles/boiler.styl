vendor(property, args)
  -webkit-{property} args
  -moz-{property} args
  -ms-{property} args
  {property} args
  
border-radius()
  vendor(border-radius, arguments)
  
transform()
  vendor(transform, arguments)

transition()
  vendor(transition, arguments)

animation()
  vendor(animation, arguments)

noUserSelect()
  vendor(user-select, none)

displayFlex()
  display -webkit-box
  display -webkit-flex
  display -ms-flexbox
  display flex

flex-direction()
  vendor(flex-direction, arguments)

align-items()
  vendor(align-items, arguments)

justify-content()
  vendor(justify-content, arguments)

flex-grow()
  vendor(flex-grow, arguments)

flex-wrap()   // check dis on mdn
  vendor(flex-wrap, arguments)

hyphens()
  vendor(hyphens, auto)
  
hardcoreHyphens()
