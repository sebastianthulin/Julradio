.Article
  padding-bottom 30px
  header
    display flex
    align-items center
    margin-bottom 20px
    .ProfilePicture
      width 50px
      height 50px
      margin-right 10px
    .user
      display flex
      flex-direction column
      .TimeSince
        color rgba(255, 255, 255, 0.53)
      a
        display table
        color #FFF
        margin-bottom -1px
        border-bottom 1px solid transparent
        hardcoreHyphens()
        &:hover
          border-color inherit
