.Comments
  //
  
.Comment
  position relative
  border-bottom 1px solid rgba(255,255,255,0.2)
  padding 10px 0px
  header
    display flex
    align-items center
    height 50px
    margin-bottom 20px
    .ProfilePicture
      width 50px
      height 50px
      margin-right 10px
    .user
      display flex
      flex-direction column
      justify-content space-between
      height 46px
      .TimeSince
        color rgba(255, 255, 255, 0.53)
      a
        display table
        color #FFF
        &:hover
          border-bottom 1px solid


  .text
    margin-left 60px
    margin-top 10px
    font-size 14px
    
  .delete
    position absolute
    right 0px
    top 0px
    color white
    background none
    padding 5px 10px 0px 0px
    border 0px
    opacity 0.2
    cursor pointer
    &:hover
      opacity 0.5