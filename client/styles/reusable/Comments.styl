.Comments
  .mainForm
    margin-bottom 20px
    textarea
      width 100%
      height 100px
      margin-bottom 10px
      padding 14px
      font-size 14px
      resize none
      color #333
      border-radius 3px
      background #FFF

    button
      width 100%
      padding 10px 0
      color #FFF
      border-radius 3px
      background rgba(255, 255, 255, 0.19)
  
.Comment
  position relative
  padding 10px 0px
  border-top 1px solid rgba(255,255,255,0.2)
  /* form    // temp as hell
    display none
  &:hover form
    display block */
  .reply
    font-size 14px
    .thing
      padding 5px
      display inline-block
      cursor pointer
      opacity .7
    .replyInput
      background #FFF
      border-radius 3px
      font-size 13px
      color #333
      padding 10px
      width 100%
      margin 10px auto
  .replies
    border-left 1px solid rgba(255, 255, 255, 0.2)
    padding-left 1em
    +desktop()
      margin-left 20px
      padding-left 20px
      border-left 1px solid rgba(255, 255, 255, 0.2)
    .Comment
      font-size 14px
      header
        .ProfilePicture
          width 40px
          height 40px
  header
    display flex
    align-items center
    .ProfilePicture
      width 50px
      height 50px
      margin-right 10px
    .user
      display flex
      flex-direction column
      .TimeSince
        color rgba(255, 255, 255, 0.53)
      a
        display table
        color #FFF
        hardcoreHyphens()
        &:hover
          margin-bottom -1px
          border-bottom 1px solid

  .text
    padding-left 60px
    padding-top 10px
    font-size 14px
    hyphens()
    a
      color rgba(255, 255, 255, 0.7)
      &.highlight
        color #FF0
      &:hover
        border-bottom 1px solid

  .delete
    position absolute
    right 0px
    top 0px
    color white
    background none
    padding 5px 10px 0px 0px
    border 0px
    opacity 0.2
    cursor pointer
    &:hover
      opacity 0.5