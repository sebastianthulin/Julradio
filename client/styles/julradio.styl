vendor(property, args)
  -webkit-{property} args
  -moz-{property} args
  -ms-{property} args
  {property} args
  
border-radius()
  vendor(border-radius, arguments)
  
transform()
  vendor(transform, arguments)

transition()
  vendor(transition, arguments)

animation()
  vendor(animation, arguments)

noUserSelect()
  vendor(user-select, none)

mobile()
  @media all and (max-width: 568px)
    {block}

tablet()
  @media all and (min-width: 568px) and (max-width: 900px)
    {block}
    
both()
  @media all and (max-width: 900px)
    {block}

@import 'fonts'
@import 'main'
@import 'base/*'
@import 'views/*'