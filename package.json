{
  "name": "julradio",
  "version": "4.1.0",
  "scripts": {
    "dev": "concurrently --kill-others 'npm run server:dev' 'npm run client:devserver'",
    "server:dev": "cd server && nodemon --exec babel-node index.js",
    "server:deploy": "cd server && NODE_ENV=production pm2 start index.js --name julradio --interpreter babel-node",
    "client:build": "cd client && NODE_ENV=production webpack",
    "client:devserver": "cd client && webpack-dev-server --inline --hot --host 0.0.0.0  --colors --no-info"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.0",
    "nodemon": "^1.11.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.3.1",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  }
}
